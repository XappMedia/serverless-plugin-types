{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "allowUnreachableCode": false
  },
  "include": [
    "src/**/*",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}